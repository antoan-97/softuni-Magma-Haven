 <main>
        <section id="details-info">
            <h1>Details</h1>
            <div class="volcano-image">
                <img src="{{photo.image}}">
            </div>

            <div class="volcano-info">
                <div class="volcano-text">
                    <h1 id="name">{{photo.name}}</h1>
                    <h3 id="location">Location: {{photo.location}}</h3>
                    <p id="type">{{photo.typeVolcano}}</p>
                    <p id="elevation"><span>Elevation: {{photo.elevation}}</span></p>
                    <p id="last-eruption">Year of Last Eruption: {{photo.lastEruption}}</p>
                    <p id="votes">Vote's Count: 2</p>
                    <p id="description">{{photo.description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if isOwner}}
                    <div class="author">
                        <a href="#" class="btn-edit">Edit</a>
                        <a href="#" class="btn-delete">Delete</a>
                    </div>
                    {{/if}}

                    <!-- Logged in user who has not yet vote for this volcano-->
                    <a href="#" class="btn-vote">Vote</a>
                    
                    <!-- Logged in user who has already vote for this volcano-->
                    <p class="vote-message">You've already voted for this volcano!</p>
                </div>
            </div>
        </section>
    </main>